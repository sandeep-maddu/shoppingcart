<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>

<div class="container">
<%- include partials/navigation.ejs %>
</div>

<% if(products) { %>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            <% for(var i=0; i<products.length;i++){%>
            <li class="list-group-item">

                <span style="font-weight: bold"><%=products[i].item.name%></span>
                <span class="badge badge-pill badge-info"><%=products[i].qty%></span>
                <span class="label label-success">Rs. <%=products[i].price%>/-</span>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        change qty <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/reduce/<%=products[i].item._id%>">Reduce by 1</a></li>
                        <li><a href="/remove/<%=products[i].item._id%>">Remove All</a></li>
                    </ul>
                </div>
            </li>
            <%}%>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <strong>Total: Rs. <%=totalPrice%>/-</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <button type="button" class="btn btn-success">Checkout</button>
    </div>
</div>


<% } else { %>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h2>No Items in Cart</h2>
    </div>
</div>

<% } %>


